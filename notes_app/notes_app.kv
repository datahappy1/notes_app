#:kivy 1.0

<MainWindow>:
    orientation: "vertical"
    open_button: btn_open
    save_button: btn_save
    save_as_button: btn_save_as
    cut_button: btn_cut
    copy_button: btn_copy
    paste_button: btn_paste
    delete_button: btn_delete
    text_view: textInput

    BoxLayout:

        size_hint: (1,None)
        size: (1,20)
        orientation: "horizontal"

        Button:
            id: btn_open
            text: "Open"
            on_press: root.on_open()

        Button:
            id: btn_save
            text: "Save"
            on_press: root.on_save()

        Button:
            id: btn_save_as
            text: "Save As"
            on_press: root.on_save_as()

        Button:
            id: btn_copy
            text: "Copy"
            on_press: root.on_copy()

        Button:
            id: btn_cut
            text: "Cut"
            on_press: root.on_cut()

        Button:
            id: btn_paste
            text: "Paste"
            on_press: root.on_paste()

        Button:
            id: btn_delete
            text: "Delete"
            on_press: root.on_delete()

    BoxLayout:

        orientation: "vertical"
        text_view: textInput

        TextInput:
            id: textInput


<OpenDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.dialog_cancel()

            Button:
                text: "Load"
                on_release: root.open_file(filechooser.path, filechooser.selection)

<SaveDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30

            TextInput:
                id: text_input

            Button:
                text: "Cancel"
                on_release: root.dialog_cancel()

            Button:
                text: "Save As"
                on_release: root.save_file(filechooser.path, text_input.text)
